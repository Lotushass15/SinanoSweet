<h1 class ="top-title">商品ジャンル一覧・編集</h1>
<div class="genre-form">
  <%= form_with model:@genre, url: admin_genres_path, method: :post, local: true do |f| %>
    <div class="field">
      <div class="main-label-genre">
        <%= f.label :ジャンル名 %>
      </div>
      <div class="sub-label-genre">
        <%= f.text_field :name %>
      </div>
      <div class="submit-label">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
<div class="genre-container">
  <div class="table-container-genre">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>ジャンル一覧</th>
          <th></th>
        </tr>
      </thead>
      <tbody class ="table-striped">
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td class ="right-shift"><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
