<h1 class ="top-title">お客様ページ</h1>
<div class="table-container">
  <div class="sub-container clearfix">
    <p class ="sub-title">登録情報</p>
    <ul class ="nav-option">
      <li class ="option-item"><%= link_to "編集する", edit_customer_customers_path, class: "btn btn-primary" %></li>
      <li class ="option-item"><%= link_to "パスワードを変更する", edit_end_user_registration_path, class: "btn btn-primary" %></li>
    </ul>
  </div>
  <table class="table table-striped table-hover">
    <thead></thead>
    <tbody class ="table-striped">
      <tr>
        <th>名前</th>
        <td><%= @customer_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= @customer_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postcode %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr style ="border-bottom: 1px solid #ddd;">
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>
  </table>
  <div class="detail-option clearfix">
    <p class ="detail-title">配送先</p>
    <div class="detail-btn"></div><%= link_to "一覧を見る", customer_customers_path, class: "btn btn-primary", style: "float: right" %></div>
  </div>
  <div class="detail-option clearfix" style ="margin-top: 15px;">
    <p class ="detail-title">注文履歴</p>
    <div class="detail-btn"></div><%= link_to "一覧を見る", customer_orders_path, class: "btn btn-primary", style: "float: right" %></div>
  </div>
</div>