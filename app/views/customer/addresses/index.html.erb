<h1 class="top-title">配送先登録・一覧</h1>
<%= flash[:notice] %>
<div class="address-form">
  <%= form_with model: @address, url: customer_addresses_path, method: :post, local: true do |f| %>
    <div class="address-field">
      <div class="main-label-address">
        <%= f.label :郵便番号 %>
      </div>
      <div class="sub-label-address">
        <%= f.text_field :postcode %>
      </div>
    </div>
      <div class="address-field">
        <div class="main-label-address">
          <%= f.label :住所 %>
        </div>
        <div class="sub-label-address">
          <%= f.text_field :address %>
        </div>
      </div>
      <div class="address-field">
        <div class="main-label-address">
          <%= f.label :宛名 %>
        </div>
        <div class="sub-label-address">
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="submit-label-address">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
<div class="address-container">
  <div class="table-container-address">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody class ="table-striped">
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postcode %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td class ="right-shift"><%= link_to "編集する", edit_customer_address_path(address.id), class: "btn btn-success" %></td>
            <td><%= link_to "削除する", customer_address_path(address.id), method: :delete, class: "btn btn-danger-address", data: {confirm: "本当に削除しますか？"} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
