<h1 class="top-title">配送先編集</h1>
<div class="address-form">
  <%= form_with model: @address, url: customer_address_path(@address), method: :patch, local: true do |f| %>
    <div class="address-field">
      <div class="main-label-address">
        <%= f.label :郵便番号 %>
      </div>
      <div class="sub-label-address">
        <%= f.text_field :postcode %>
      </div>
    </div>
      <div class="address-field">
        <div class="main-label-address">
          <%= f.label :住所 %>
        </div>
        <div class="sub-label-address">
          <%= f.text_field :address %>
        </div>
      </div>
      <div class="address-field">
        <div class="main-label-address">
          <%= f.label :宛名 %>
        </div>
        <div class="sub-label-address">
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="submit-label-address">
        <%= f.submit "変更内容を保存", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>