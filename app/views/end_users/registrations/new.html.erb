<h2 class ="top-title">新規会員登録</h2>
  <div class="sign-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "end_users/shared/error_messages", resource: resource %>
      
      <div class="field">
        <div class="main-label">
          <%= f.label :お名前 %>
        </div>
        <div class="form-area clearfix">
          <span class="sub-label">姓 
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
          </span>
          <span class="sub-label">名 
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
          </span>
        </div>
      </div>
      
      <div class="field">
        <div class="main-label">
          <%= f.label :フリガナ %>
        </div>
        <div class="form-area clearfix">
          <span class="sub-label">セイ
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
          </span>
          <span class="sub-label">メイ
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
          </span>
        </div>
      </div>
      
      <div class="field">
        <div class="main-label">
          <%= f.label :メールアドレス %><br />
        </div>
        <div class="form-area-email ">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>
      
      <div class="field">
        <div class="main-label">
          <%= f.label :電話番号 %><br />
        </div>
        <div class="form-area-email">
          <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
        </div>
      </div>
      
      <div class="field">
        <div class="main-label">
          <%= f.label :郵便番号 %><br />
        </div>
        <div class="form-area-email">
          <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
        </div>
      </div>
      
      <div class="field">
        <div class="main-label">
          <%= f.label :住所 %><br />
        </div>
        <div class="form-area-email">
          <%= f.text_field :address, autofocus: true, autocomplete: "address", size: "55" %>
        </div>
      </div>
    
      <div class="field">
        <div class="main-label">
          <%= f.label :パスワード %>
        </div>
        <div class="form-area-password">
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
           <span><em>(<%= @minimum_password_length %>文字以内)</em></span>
          <% end %>
        </div>
      </div>
      
      <div class="field">
        <div class="main-label">
          <%= f.label :パスワード %><span style ="font-weight: bold;"> (確認用)</span></%><br />
        </div>
        <div class="form-area-email">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
      
      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>
    
    <%= render "end_users/shared/links" %>
  </div>