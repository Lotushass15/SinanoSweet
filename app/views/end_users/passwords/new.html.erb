<h2 class ="top-title">Forgot your password?</h2>
<div class="sign-container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "end_users/shared/error_messages", resource: resource %>
  
    <div class="field">
      <span class ="login-label" style ="left: -30px"><%= f.label :メールアドレス %></span>
      <div class="form-area-pass">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "30" %>
      </div>
    </div>
  
    <div class="actions">
      <%= f.submit "送信", class: "btn btn-warning" %>
    </div>
  <% end %>
  
  <%#= render "end_users/shared/links" %>
</div>
